{# texte des fonts #}
<div class="box target">
  <div class="zoom-conteneur" id="conteneur">
    {% for workshop in pages.find('/typotheque').children %}
      {% for font in workshop.children %}
      <div class="entree-font" data-workshop-name="{{ workshop.title }}" data-workshop-annee="{{ workshop.header.custom.anneeworkshop }}" data-workshop-invite="{{ workshop.header.custom.inviteworkshop }}" data-workshop-informations="{{ workshop.content }}">
            <h1 class="{{ font.title }}" data-font-date="{{ font.header.custom.datesortie }}" data-font-lientelechargement="{{ base_url_absolute }}{{font.route}}/fichiersfontes/{{font.header.custom.archivezip|first.name}}" data-font-auteur="{{ font.header.custom.auteur }}" contenteditable>manger des fleurs</h1>
      </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>


<div id="buttons">
  <div class="btn zoom"></div>
  <div class="btn zoom-out"></div>
  <div class="btn zoom-init"></div>
</div>

<div class="panel panel-font">
  <h3 class="entree-font">nom de la font</h3>
  <h4 class="entree-font">prénom et nom du créateur de la font<br>
  date<br>
  Workshop de nom de l'intervenant
  </h4>
  <p class="entree-font">description du workshop</p>
</div>




  
{% endblock %}
