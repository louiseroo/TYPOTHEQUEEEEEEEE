{# texte des fonts #}
<div class="box target">

  <div class="zoom-conteneur" id="conteneur">
    {% for workshop in pages.find('/typotheque').children %}
      {% for font in workshop.children %}
      <div class="entree-font" data-font-name="{{ font.title }}" data-workshop-name="{{ workshop.title }}" data-workshop-annee="{{ workshop.header.custom.anneeworkshop }}" data-workshop-invite="{{ workshop.header.custom.inviteworkshop }}" data-workshop-informations="{{ workshop.content }}">
            <h1 class="{{ font.title }}" data-font-date="{{ font.header.custom.datesortie }}" data-font-lientelechargement="{{ base_url_absolute }}{{font.route}}/fichiersfontes/{{font.header.custom.archivezip|first.name}}" data-font-auteur="{{ font.header.custom.auteur }}" contenteditable>{{font.header.custom.phrasepoetique}}</h1>
      </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>



<div id="buttons">
  <div class="btn zoom">+</div>
  <div class="btn zoom-out">-</div>
  <div class="btn zoom-init"><img src="{{ url('theme://images/fleche.png')|e }}"></div>
</div>



<style type="text/css">
#buttons{
  top: 83vh;
  font-family: var(--primary-font);
}

.btn{
  color: var(--secondary-color);
  cursor: pointer;
}

.btn:hover{
  color: var(--primary-color);
}

.btn img{
  width: 100%;
}

.zoom, .zoom-out{
  font-size: 2.8em;
  align-items: center;
  padding-top: 20px;
}

.zoom-out{
  margin-bottom: 20px;
}





</style>

